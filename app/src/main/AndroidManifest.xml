<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexeimoisseev.bashim.app" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.alexeimoisseev.bashim.app.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alexeimoisseev.bashim.app.QuoteActivity"
            android:label="@string/title_activity_quote"
            android:parentActivityName="com.alexeimoisseev.bashim.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alexeimoisseev.bashim.app.MainActivity" />
        </activity>
        <activity
            android:name="com.alexeimoisseev.bashim.app.AboutActivity"
            android:label="@string/action_about"
            android:parentActivityName="com.alexeimoisseev.bashim.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alexeimoisseev.bashim.app.MainActivity" />
        </activity>
    </application>

</manifest>
